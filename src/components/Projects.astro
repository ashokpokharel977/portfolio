<section id="projects" class="section">
  <div class="container">
    <h2 class="section-title">Featured Projects</h2>

    <div class="projects-grid">
      {projects.map((project, index) => (
        <article class="project-card card" style={`--delay: ${index * 0.1}s`}>
          <div class="project-header">
            <span class="project-icon" set:html={project.icon} />
            <span class="project-role">{project.role}</span>
          </div>

          <h3 class="project-title">{project.title}</h3>
          <p class="project-description">{project.description}</p>

          <ul class="project-highlights">
            {project.highlights.map((highlight) => (
              <li>{highlight}</li>
            ))}
          </ul>

          <div class="project-tags">
            {project.tags.map((tag) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        </article>
      ))}
    </div>

    <div class="projects-cta">
      <a href="https://github.com/ashokpokharel977" target="_blank" rel="noopener noreferrer" class="btn btn-outline">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
        </svg>
        View More on GitHub
      </a>
    </div>
  </div>
</section>

<style>
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
    gap: var(--space-lg);
  }

  .project-card {
    animation: fadeIn 0.5s ease forwards;
    animation-delay: var(--delay);
    opacity: 0;
    display: flex;
    flex-direction: column;
  }

  .project-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: var(--space-md);
  }

  .project-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    background: var(--bg-tertiary);
    border-radius: var(--radius-md);
    color: var(--accent);
    transition: all var(--transition-base);
  }

  .project-card:hover .project-icon {
    box-shadow: var(--glow-sm);
    background: var(--accent);
    color: white;
  }

  .project-role {
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--accent);
    background: color-mix(in srgb, var(--accent) 10%, transparent);
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--radius-full);
  }

  .project-title {
    font-size: 1.125rem;
    margin-bottom: var(--space-sm);
  }

  .project-description {
    font-size: 0.9rem;
    margin-bottom: var(--space-md);
    flex-grow: 1;
  }

  .project-highlights {
    list-style: none;
    margin-bottom: var(--space-md);
    padding: var(--space-md);
    background: var(--bg-tertiary);
    border-radius: var(--radius-md);
  }

  .project-highlights li {
    position: relative;
    padding-left: 1.25rem;
    font-size: 0.85rem;
    color: var(--text-secondary);
    margin-bottom: var(--space-xs);
  }

  .project-highlights li:last-child {
    margin-bottom: 0;
  }

  .project-highlights li::before {
    content: 'âœ“';
    position: absolute;
    left: 0;
    color: var(--accent);
    font-weight: 600;
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
    margin-top: auto;
  }

  .projects-cta {
    margin-top: var(--space-xl);
    text-align: center;
  }

  @media (max-width: 400px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
