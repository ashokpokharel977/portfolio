---
const skillCategories = [
  {
    title: "AI & GenAI",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2a2 2 0 0 1 2 2c0 .74-.4 1.39-1 1.73V7h1a7 7 0 0 1 7 7h1a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1h-1v1a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-1H2a1 1 0 0 1-1-1v-3a1 1 0 0 1 1-1h1a7 7 0 0 1 7-7h1V5.73c-.6-.34-1-.99-1-1.73a2 2 0 0 1 2-2M7.5 13a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3m9 0a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3"></path></svg>`,
    skills: ["Agentic Applications", "RAG Solutions", "LLM Fine-tuning", "Intelligent Automation", "Predictive Analytics"],
    featured: true,
  },
  {
    title: "Cloud & Infrastructure",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 10h-1.26A8 8 0 1 0 9 20h9a5 5 0 0 0 0-10z"></path></svg>`,
    skills: ["AWS", "Azure", "GCP", "Kubernetes", "Serverless", "Terraform", "CloudFormation"],
  },
  {
    title: "DevOps & SRE",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="8" rx="2" ry="2"></rect><rect x="2" y="14" width="20" height="8" rx="2" ry="2"></rect><line x1="6" y1="6" x2="6.01" y2="6"></line><line x1="6" y1="18" x2="6.01" y2="18"></line></svg>`,
    skills: ["CI/CD", "Docker", "Helm", "GitOps", "ArgoCD", "Platform Engineering", "GitHub Actions"],
  },
  {
    title: "Development",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="16 18 22 12 16 6"></polyline><polyline points="8 6 2 12 8 18"></polyline></svg>`,
    skills: ["Python", "Go", "TypeScript", "Bash", "PowerShell", "FastAPI", "Node.js"],
  },
  {
    title: "Data & Observability",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><ellipse cx="12" cy="5" rx="9" ry="3"></ellipse><path d="M21 12c0 1.66-4 3-9 3s-9-1.34-9-3"></path><path d="M3 5v14c0 1.66 4 3 9 3s9-1.34 9-3V5"></path></svg>`,
    skills: ["PostgreSQL", "Oracle", "ELK Stack", "Grafana", "Prometheus", "DataDog", "Data Pipelines"],
  },
  {
    title: "Security & Compliance",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path></svg>`,
    skills: ["DevSecOps", "Cloud Security", "PCI/SOC/HIPAA", "Zero Trust", "Vault", "WAF"],
  },
  {
    title: "Leadership & Strategy",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M23 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg>`,
    skills: ["Team Building", "Technical Strategy", "Stakeholder Management", "Agile", "Mentorship"],
  },
];
---

<section id="skills" class="section">
  <div class="container">
    <h2 class="section-title">Skills & Technologies</h2>

    <div class="skills-grid">
      {skillCategories.map((category, index) => (
        <div class="skill-card card" style={`--delay: ${index * 0.1}s`}>
          <div class="skill-card-header">
            <span class="skill-icon" set:html={category.icon} />
            <h3 class="skill-card-title">{category.title}</h3>
          </div>
          <div class="skill-tags">
            {category.skills.map((skill) => (
              <span class="tag">{skill}</span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-lg);
  }

  .skill-card {
    animation: fadeIn 0.5s ease forwards;
    animation-delay: var(--delay);
    opacity: 0;
  }

  .skill-card-header {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin-bottom: var(--space-md);
  }

  .skill-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    background: var(--bg-tertiary);
    border-radius: var(--radius-md);
    color: var(--accent);
    transition: all var(--transition-base);
  }

  .skill-card:hover .skill-icon {
    box-shadow: var(--glow-sm);
    background: var(--accent);
    color: white;
  }

  .skill-card-title {
    font-size: 1rem;
    font-weight: 600;
  }

  .skill-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
  }

  .skill-card .tag {
    transition: all var(--transition-fast);
  }

  .skill-card:hover .tag {
    background: var(--accent);
    color: white;
  }
</style>
