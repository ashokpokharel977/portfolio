---
interface Props {
  title: string;
  description: string;
  slug: string;
  pubDate: Date;
  heroImage?: string;
  tags: string[];
  category: string;
}

const { title, description, slug, pubDate, heroImage, tags, category } = Astro.props;

const categoryLabels: Record<string, string> = {
  'devops': 'DevOps',
  'cloud': 'Cloud',
  'security': 'Security',
  'ai': 'AI & ML',
  'leadership': 'Leadership',
  'automation': 'Automation',
};

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

<article class="blog-card card">
  <a href={`/blog/${slug}`} class="card-link">
    {heroImage && (
      <div class="card-image-container">
        <img src={heroImage} alt={title} class="card-image" loading="lazy" />
      </div>
    )}
    <div class="card-content">
      <div class="card-meta">
        <a href={`/blog/category/${category}`} class="category-badge" onclick="event.stopPropagation()">
          {categoryLabels[category] || category}
        </a>
        <time datetime={pubDate.toISOString()}>{formattedDate}</time>
      </div>
      <h3 class="card-title">{title}</h3>
      <p class="card-description">{description}</p>
      {tags.length > 0 && (
        <div class="card-tags">
          {tags.slice(0, 3).map(tag => (
            <a
              href={`/blog/tag/${encodeURIComponent(tag)}`}
              class="tag"
              onclick="event.stopPropagation()"
            >
              {tag}
            </a>
          ))}
          {tags.length > 3 && (
            <span class="tag-more">+{tags.length - 3}</span>
          )}
        </div>
      )}
    </div>
  </a>
</article>

<style>
  .blog-card {
    padding: 0;
    overflow: hidden;
    transition: all var(--transition-base);
  }

  .blog-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--glow-md);
  }

  .card-link {
    display: block;
    color: inherit;
    text-decoration: none;
  }

  .card-link:hover {
    color: inherit;
  }

  .card-image-container {
    position: relative;
    overflow: hidden;
    aspect-ratio: 16 / 9;
    background: var(--bg-tertiary);
  }

  .card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center top;
    transition: transform var(--transition-base);
  }

  .blog-card:hover .card-image {
    transform: scale(1.05);
  }

  .card-content {
    padding: var(--space-lg);
  }

  .card-meta {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin-bottom: var(--space-sm);
  }

  .category-badge {
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: var(--space-xs) var(--space-sm);
    background: color-mix(in srgb, var(--accent) 15%, transparent);
    color: var(--accent);
    border-radius: var(--radius-sm);
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .category-badge:hover {
    background: var(--accent);
    color: white;
  }

  .card-meta time {
    font-size: 0.8rem;
    color: var(--text-muted);
  }

  .card-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: var(--space-sm);
    transition: color var(--transition-fast);
    line-height: 1.4;
  }

  .blog-card:hover .card-title {
    color: var(--accent);
  }

  .card-description {
    font-size: 0.9rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: var(--space-md);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
  }

  .card-tags .tag {
    font-size: 0.75rem;
    padding: var(--space-xs) var(--space-sm);
    background: var(--bg-tertiary);
    border: 1px solid var(--border);
    border-radius: var(--radius-full);
    color: var(--text-secondary);
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .card-tags .tag:hover {
    background: var(--accent);
    border-color: var(--accent);
    color: white;
  }

  .tag-more {
    font-size: 0.75rem;
    padding: var(--space-xs) var(--space-sm);
    color: var(--text-muted);
  }
</style>
