---
const facts = [
  { number: "10", suffix: "+", label: "Years Experience", icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg>` },
  { number: "20", suffix: "+", label: "Engineers Mentored", icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M23 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg>` },
  { number: "3", suffix: "", label: "Cloud Certifications", icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>` },
  { number: "50", suffix: "+", label: "Projects Delivered", icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"></path></svg>` }
];
---

<section class="stats-section">
  <div class="stats-bg-animation"></div>
  <div class="container">
    <div class="stats-grid">
      {facts.map((fact, index) => (
        <div class="stat-card" style={`--delay: ${index * 0.1}s`}>
          <div class="stat-icon-wrapper">
            <div class="stat-icon" set:html={fact.icon} />
            <div class="stat-icon-glow"></div>
          </div>
          <span class="stat-number" data-target={fact.number} data-suffix={fact.suffix}>0{fact.suffix}</span>
          <span class="stat-label">{fact.label}</span>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .stats-section {
    padding: var(--space-2xl) 0;
    background: linear-gradient(135deg, #134e4a, #0f766e);
    position: relative;
    overflow: hidden;
  }

  :global([data-theme="dark"]) .stats-section {
    background: linear-gradient(135deg, #134e4a, #0f766e);
  }

  .stats-bg-animation {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(circle at 20% 50%, rgba(255,255,255,0.1) 0%, transparent 50%),
      radial-gradient(circle at 80% 50%, rgba(255,255,255,0.1) 0%, transparent 50%),
      radial-gradient(circle at 50% 20%, rgba(255,255,255,0.08) 0%, transparent 40%);
    animation: bgShift 8s ease-in-out infinite;
    pointer-events: none;
  }

  @keyframes bgShift {
    0%, 100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.8;
      transform: scale(1.05);
    }
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-lg);
    position: relative;
    z-index: 1;
  }

  .stat-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: var(--space-xl) var(--space-lg);
    background: rgba(255, 255, 255, 0.15);
    border-radius: var(--radius-lg);
    border: 1px solid rgba(255, 255, 255, 0.25);
    backdrop-filter: blur(10px);
    animation: fadeIn 0.5s ease forwards;
    animation-delay: var(--delay);
    opacity: 0;
    transition: all var(--transition-base);
  }

  :global([data-theme="dark"]) .stat-card {
    background: rgba(0, 0, 0, 0.25);
    border-color: rgba(255, 255, 255, 0.15);
  }

  .stat-card:hover {
    transform: translateY(-6px) scale(1.02);
    background: rgba(255, 255, 255, 0.22);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3), 0 0 30px rgba(255, 255, 255, 0.15);
    border-color: rgba(255, 255, 255, 0.4);
  }

  :global([data-theme="dark"]) .stat-card:hover {
    background: rgba(0, 0, 0, 0.35);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.4), 0 0 40px rgba(20, 184, 166, 0.3);
    border-color: rgba(255, 255, 255, 0.25);
  }

  .stat-icon-wrapper {
    position: relative;
    margin-bottom: var(--space-md);
  }

  .stat-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3.5rem;
    height: 3.5rem;
    background: rgba(255, 255, 255, 0.25);
    border-radius: var(--radius-lg);
    color: white;
    position: relative;
    z-index: 1;
    transition: all var(--transition-base);
  }

  :global([data-theme="dark"]) .stat-icon {
    background: rgba(20, 184, 166, 0.3);
    box-shadow: 0 0 15px rgba(20, 184, 166, 0.2);
  }

  .stat-icon-glow {
    position: absolute;
    inset: -4px;
    border-radius: var(--radius-lg);
    background: rgba(255, 255, 255, 0.15);
    opacity: 0;
    transition: all var(--transition-base);
    z-index: 0;
  }

  .stat-card:hover .stat-icon {
    transform: scale(1.1);
    background: rgba(255, 255, 255, 0.35);
  }

  :global([data-theme="dark"]) .stat-card:hover .stat-icon {
    background: rgba(20, 184, 166, 0.5);
    box-shadow: 0 0 25px rgba(20, 184, 166, 0.4);
  }

  .stat-card:hover .stat-icon-glow {
    opacity: 1;
    animation: iconPulse 1.5s ease-in-out infinite;
  }

  @keyframes iconPulse {
    0%, 100% {
      transform: scale(1);
      opacity: 0.5;
    }
    50% {
      transform: scale(1.2);
      opacity: 0;
    }
  }

  .stat-number {
    font-size: 2.75rem;
    font-weight: 700;
    color: white;
    line-height: 1;
    margin-bottom: var(--space-xs);
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
  }

  .stat-label {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.9);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 900px) {
    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 500px) {
    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-md);
    }

    .stat-number {
      font-size: 2rem;
    }

    .stat-card {
      padding: var(--space-md);
    }

    .stat-icon {
      width: 3rem;
      height: 3rem;
    }
  }
</style>

<script>
  // Counter animation with Intersection Observer
  const animateCounter = (element: HTMLElement) => {
    const target = parseInt(element.dataset.target || '0');
    const suffix = element.dataset.suffix || '';
    const duration = 2000;
    const steps = 60;
    const stepDuration = duration / steps;
    let current = 0;
    const increment = target / steps;

    const timer = setInterval(() => {
      current += increment;
      if (current >= target) {
        current = target;
        clearInterval(timer);
      }
      element.textContent = Math.floor(current) + suffix;
    }, stepDuration);
  };

  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          const numbers = entry.target.querySelectorAll('.stat-number');
          numbers.forEach((num) => {
            if (num instanceof HTMLElement && !num.dataset.animated) {
              num.dataset.animated = 'true';
              animateCounter(num);
            }
          });
        }
      });
    },
    { threshold: 0.3 }
  );

  const statsSection = document.querySelector('.stats-section');
  if (statsSection) {
    observer.observe(statsSection);
  }
</script>
