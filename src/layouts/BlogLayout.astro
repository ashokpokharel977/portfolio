---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  heroImage?: string;
  tags?: string[];
}

const { title, description, pubDate, updatedDate, heroImage, tags = [] } = Astro.props;

const formattedPubDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const formattedUpdatedDate = updatedDate?.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout title={`${title} | Ashok Pokharel`} description={description} image={heroImage}>
  <Header />
  <main class="blog-post">
    <article class="container" data-pagefind-body>
      <header class="post-header">
        <a href="/blog" class="back-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="19" y1="12" x2="5" y2="12"></line>
            <polyline points="12 19 5 12 12 5"></polyline>
          </svg>
          Back to Blog
        </a>

        <h1 class="post-title">{title}</h1>
        <p class="post-description">{description}</p>

        <div class="post-meta">
          <time datetime={pubDate.toISOString()}>{formattedPubDate}</time>
          {updatedDate && (
            <span class="updated">
              (Updated: {formattedUpdatedDate})
            </span>
          )}
        </div>

        {tags.length > 0 && (
          <div class="post-tags">
            {tags.map((tag) => (
              <a href={`/blog/tag/${encodeURIComponent(tag)}`} class="tag">{tag}</a>
            ))}
          </div>
        )}
      </header>

      {heroImage && (
        <img src={heroImage} alt={title} class="post-hero-image" />
      )}

      <div class="post-content">
        <slot />
      </div>
    </article>
  </main>
  <Footer />
</BaseLayout>

<style>
  .blog-post {
    padding-top: 6rem;
    padding-bottom: var(--space-3xl);
    min-height: 100vh;
  }

  .post-header {
    max-width: 720px;
    margin: 0 auto var(--space-2xl);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: 0.875rem;
    color: var(--text-muted);
    margin-bottom: var(--space-lg);
    transition: color var(--transition-fast);
  }

  .back-link:hover {
    color: var(--accent);
  }

  .post-title {
    font-size: clamp(2rem, 5vw, 2.5rem);
    margin-bottom: var(--space-md);
    line-height: 1.2;
  }

  .post-description {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin-bottom: var(--space-md);
  }

  .post-meta {
    font-size: 0.875rem;
    color: var(--text-muted);
    margin-bottom: var(--space-md);
  }

  .updated {
    font-style: italic;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
  }

  .post-tags .tag {
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .post-tags .tag:hover {
    background: var(--accent);
    border-color: var(--accent);
    color: white;
    box-shadow: var(--glow-sm);
  }

  .post-hero-image {
    width: 100%;
    max-width: 720px;
    margin: 0 auto var(--space-2xl);
    display: block;
    border-radius: var(--radius-lg);
  }

  .post-content {
    max-width: 720px;
    margin: 0 auto;
  }

  /* Prose styles for blog content */
  .post-content :global(h1),
  .post-content :global(h2),
  .post-content :global(h3),
  .post-content :global(h4) {
    margin-top: var(--space-2xl);
    margin-bottom: var(--space-md);
  }

  .post-content :global(p) {
    margin-bottom: var(--space-md);
    line-height: 1.8;
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin-bottom: var(--space-md);
    padding-left: var(--space-lg);
  }

  .post-content :global(li) {
    margin-bottom: var(--space-sm);
    color: var(--text-secondary);
  }

  .post-content :global(blockquote) {
    border-left: 3px solid var(--accent);
    padding-left: var(--space-lg);
    margin: var(--space-lg) 0;
    font-style: italic;
    color: var(--text-secondary);
  }

  .post-content :global(pre),
  .post-content :global(pre.astro-code) {
    position: relative;
    background: var(--code-bg) !important;
    border: 1px solid var(--code-border);
    border-radius: var(--radius-md);
    padding: var(--space-lg);
    padding-top: var(--space-xl);
    overflow-x: auto;
    margin-bottom: var(--space-md);
  }

  .post-content :global(pre code),
  .post-content :global(pre.astro-code code) {
    font-family: var(--font-mono);
    font-size: 0.875em;
    background: transparent !important;
    padding: 0;
  }

  .post-content :global(code) {
    font-family: var(--font-mono);
    font-size: 0.875em;
  }

  .post-content :global(.copy-button) {
    position: absolute;
    top: var(--space-sm);
    right: var(--space-sm);
    padding: var(--space-xs) var(--space-sm);
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: var(--radius-sm);
    color: var(--code-text);
    font-size: 0.75rem;
    font-family: var(--font-sans);
    cursor: pointer;
    opacity: 0;
    transition: opacity var(--transition-fast), background var(--transition-fast);
  }

  .post-content :global(pre:hover .copy-button) {
    opacity: 1;
  }

  .post-content :global(.copy-button:hover) {
    background: rgba(255, 255, 255, 0.2);
  }

  .post-content :global(.copy-button.copied) {
    background: var(--accent);
    border-color: var(--accent);
    color: white;
  }

  .post-content :global(a) {
    color: var(--accent);
    text-decoration: underline;
    text-decoration-thickness: 1px;
    text-underline-offset: 2px;
  }

  .post-content :global(a:hover) {
    text-decoration-thickness: 2px;
  }

  .post-content :global(img) {
    max-width: 100%;
    border-radius: var(--radius-md);
    margin: var(--space-lg) 0;
  }

  .post-content :global(hr) {
    border: none;
    border-top: 1px solid var(--border);
    margin: var(--space-2xl) 0;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const codeBlocks = document.querySelectorAll('.post-content pre');

    codeBlocks.forEach((block) => {
      const button = document.createElement('button');
      button.className = 'copy-button';
      button.textContent = 'Copy';
      button.setAttribute('aria-label', 'Copy code to clipboard');

      button.addEventListener('click', async () => {
        const code = block.querySelector('code');
        const text = code ? code.textContent : block.textContent;

        try {
          await navigator.clipboard.writeText(text || '');
          button.textContent = 'Copied!';
          button.classList.add('copied');

          setTimeout(() => {
            button.textContent = 'Copy';
            button.classList.remove('copied');
          }, 2000);
        } catch (err) {
          button.textContent = 'Failed';
          setTimeout(() => {
            button.textContent = 'Copy';
          }, 2000);
        }
      });

      block.appendChild(button);
    });
  });
</script>
